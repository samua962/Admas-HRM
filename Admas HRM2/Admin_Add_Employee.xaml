<UserControl x:Class="Admas_HRM2.Admin_Add_Employee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Background="White" Margin="200,100,200,0">
            <!-- Grid and Row Definitions -->
            <Grid.RowDefinitions>
                <!-- Existing Fields -->
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- First Name & Last Name -->
                <RowDefinition Height="Auto"/>
                <!-- Department & Employee ID -->
                <RowDefinition Height="Auto"/>
                <!-- Role & Gender -->
                <RowDefinition Height="Auto"/>
                <!-- Profile Image -->
                <RowDefinition Height="Auto"/>
                <!-- Birth Date & Joining Date -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->

                <!-- New Fields Below Existing Fields -->
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Username -->
                <RowDefinition Height="Auto"/>
                <!-- Education -->
                <RowDefinition Height="Auto"/>
                <!-- Status -->
                <RowDefinition Height="Auto"/>
                <!-- Status -->
                <RowDefinition Height="Auto"/>
                <!-- Hire Type -->
                <RowDefinition Height="Auto"/>
                <!-- Description -->
                <RowDefinition Height="Auto"/>
                <!-- Contact Person -->
                <RowDefinition Height="Auto"/>
                <!-- File Attachment -->
                <RowDefinition Height="Auto"/>
                <!-- Save and Cancel -->
                <RowDefinition Height="Auto"/>
                <!-- Make sure there's enough space at the bottom -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Left Column -->
                <ColumnDefinition Width="*" />
                <!-- Right Column -->
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock Text="Add New Employee" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"
                       Grid.ColumnSpan="2" Margin="0,0,0,20" Grid.Row="0" Foreground="Black"/>

            <!-- First Name -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="First Name:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFirstName" Height="40" VerticalAlignment="Center" Padding="10" Margin="0,0,10,0" BorderThickness="1" Background="#F0F0F0" FontSize="14" TextChanged="txtFirstName_TextChanged"/>
            </StackPanel>

            <!-- Last Name -->
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Last Name:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <TextBox x:Name="txtLastName" Height="40" VerticalAlignment="Center" Padding="10" Margin="0,0,10,0" BorderThickness="1" Background="#F0F0F0" FontSize="14" TextChanged="txtLastName_TextChanged"/>
            </StackPanel>

            <!-- Department -->
            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Department:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbDepartment" Height="40" Margin="0,0,10,0" VerticalAlignment="Center" BorderThickness="1" Background="#F0F0F0" FontSize="14">
                    <ComboBoxItem Content="HR"/>
                    <ComboBoxItem Content="IT"/>
                    <ComboBoxItem Content="Computer Science"/>
                    <ComboBoxItem Content="Accounting"/>
                    <ComboBoxItem Content="Registrar"/>
                    <ComboBoxItem Content="Finance"/>
                    <ComboBoxItem Content="Marketing"/>
                </ComboBox>
            </StackPanel>

            <!-- Employee ID -->
            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Employee ID:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmployeeID" Height="40" VerticalAlignment="Center" Padding="10" Margin="0,0,10,0" BorderThickness="1" Background="#F0F0F0" FontSize="14"/>
            </StackPanel>

            <!-- Role -->
            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Role:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbRole" Height="40" VerticalAlignment="Center" BorderThickness="1" Margin="0,0,10,0" Background="#F0F0F0" FontSize="14">
                    <ComboBoxItem Content="Instructor"/>
                    <ComboBoxItem Content="Employee"/>
                    <ComboBoxItem Content="Intern"/>
                </ComboBox>
            </StackPanel>

            <!-- Gender -->
            <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Gender:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbGender" Height="40" VerticalAlignment="Center" Margin="0,0,10,0" BorderThickness="1" Background="#F0F0F0" FontSize="14">
                    <ComboBoxItem Content="Male"/>
                    <ComboBoxItem Content="Female"/>
                </ComboBox>
            </StackPanel>

            <!-- Title -->
            <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Title:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbTitle" Height="40" Margin="0,0,10,0" VerticalAlignment="Center" BorderThickness="1" Background="#F0F0F0" FontSize="14">
                    <ComboBoxItem Content="Mr."/>
                    <ComboBoxItem Content="Ms."/>
                    <ComboBoxItem Content="Dr."/>
                    <ComboBoxItem Content="Prof."/>
                </ComboBox>
            </StackPanel>

            <!-- Profile Image -->
            <StackPanel Grid.Row="10" Grid.Column="0" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Profile Image:" VerticalAlignment="Center" Margin="0,0,0,5"/>

                <!-- Upload Button -->
                <Button x:Name="btnUploadImage" Content="Upload Image" Height="50" 
                        VerticalAlignment="Center" Margin="0,0,10,0" Padding="15" 
                        BorderThickness="1" Background="#F0F0F0" FontSize="14" Click="btnUploadImage_Click"/>
                <TextBlock x:Name="image" VerticalAlignment="Center" Margin="0,0,0,5"/>

            </StackPanel>


            <!-- Birth Date -->
            <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Date of Birth:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpDOB" Height="40" VerticalAlignment="Center" Margin="0,0,10,0" BorderThickness="1" Background="#F0F0F0" FontSize="14"/>
            </StackPanel>

            <!-- Joining Date -->
            <StackPanel Grid.Row="5" Grid.Column="1" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Joining Date:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpJoiningDate" Height="40" Margin="0,0,10,0" VerticalAlignment="Center" BorderThickness="1" Background="#F0F0F0" FontSize="14"/>
            </StackPanel>

            <!-- New Fields Below Existing Fields -->

            <!-- Username -->
            <StackPanel Grid.Row="6" Grid.Column="0" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Username:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Height="40" VerticalAlignment="Center" Padding="10" Margin="0,0,10,0" BorderThickness="1" Background="#F0F0F0" FontSize="14"/>
            </StackPanel>

            <!-- Education -->
            <StackPanel Grid.Row="6" Grid.Column="1" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Education:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEducation" Height="40" VerticalAlignment="Center" Padding="10" Margin="0,0,10,0" BorderThickness="1" Background="#F0F0F0" FontSize="14"/>
            </StackPanel>

            <!-- Hire Type -->
            <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Hire Type:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbHireType" Height="40" Margin="0,0,10,0" VerticalAlignment="Center" BorderThickness="1" Background="#F0F0F0" FontSize="14">
                    <ComboBoxItem Content="Full-Time"/>
                    <ComboBoxItem Content="Part-Time"/>
                    <ComboBoxItem Content="Contract"/>
                </ComboBox>
            </StackPanel>

            <!-- Salary -->
            <StackPanel Grid.Row="7" Grid.Column="0" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Salary:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <TextBox x:Name="txtSalary" Height="40" VerticalAlignment="Center" Padding="10" Margin="0,0,10,0" BorderThickness="1" Background="#F0F0F0" FontSize="14"/>
            </StackPanel>

            <!-- Status -->
            <StackPanel Grid.Row="7" Grid.Column="1" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbStatus" Height="40" VerticalAlignment="Center" Padding="10" Margin="0,0,10,0"
              BorderThickness="1" Background="#F0F0F0" FontSize="14">
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Inactive"/>
                </ComboBox>
            </StackPanel>


            <!-- Description -->
            <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20" VerticalAlignment="Center" HorizontalAlignment="Stretch" >
                <TextBlock Text="Description:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDescription" Height="100" VerticalAlignment="Center" Padding="10" Margin="0,0,10,0" BorderThickness="1" Background="#F0F0F0" FontSize="14" AcceptsReturn="True"/>
            </StackPanel>

            <!-- Contact Person Container -->
            <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20" VerticalAlignment="Center">
                <!-- Title -->
                <TextBlock Text="Contact" VerticalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Border container for contact details -->
                <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Background="#F0F0F0">
                    <StackPanel>

                        <!-- Email -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Email:" VerticalAlignment="Center" Margin="0,0,10,0" Width="120"/>
                            <TextBox x:Name="txtEmail" Height="40" VerticalAlignment="Center" Margin="0,0,10,0" Padding="10" Width="200" BorderThickness="1" Background="#F0F0F0" FontSize="14"/>
                        </StackPanel>

                        <!-- Phone Number -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Phone Number:" VerticalAlignment="Center" Margin="0,0,10,0" Width="120"/>
                            <TextBox x:Name="txtPhoneNumber" Height="40" VerticalAlignment="Center" Margin="0,0,10,0" Padding="10" Width="200" BorderThickness="1" Background="#F0F0F0" FontSize="14"/>
                        </StackPanel>

                        <!-- Address -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Address:" VerticalAlignment="Center" Margin="0,0,10,0" Width="120"/>
                            <TextBox x:Name="txtAddress" Height="40" VerticalAlignment="Center" Margin="0,0,10,0" Padding="10" Width="200" BorderThickness="1" Background="#F0F0F0" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>


            <!-- File Attachment -->
            <StackPanel Grid.Row="10" Grid.Column="1" Margin="0,0,0,20" VerticalAlignment="Center">
                <TextBlock Text="File Attachment:" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <Button x:Name="btnUploadFile" Content="Upload File" Height="50" VerticalAlignment="Center" Margin="0,0,10,0" Padding="15" BorderThickness="1" Background="#F0F0F0" FontSize="14" Click="btnUploadFile_Click"/>
                <TextBlock x:Name="file" VerticalAlignment="Center" Margin="0,0,0,5"/>
            </StackPanel>

            <!-- Save and Cancel Buttons at Bottom -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="14" Grid.ColumnSpan="2" Margin="0,50,0,0">
                <Button Content="Save" Width="120" Height="40" Background="DodgerBlue" Cursor="Hand" Foreground="White" Margin="10" Padding="10,5"  BorderBrush="DodgerBlue" BorderThickness="1" FontSize="14" Click="btnSave"/>
                <Button Content="Cancel" Width="120" Height="40" Background="Gray" Cursor="Hand" Foreground="White" Margin="10" Padding="10,5" BorderBrush="Gray" BorderThickness="1" FontSize="14" Click="btnCancel"/>
            </StackPanel>
        </Grid>

    </ScrollViewer>
</UserControl>
