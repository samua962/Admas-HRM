<UserControl x:Class="Admas_HRM2.Report"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="White">

    <UserControl.Resources>
        <!-- Color Definitions -->
        <Color x:Key="PrimaryColor">#2C3E50</Color>
        <Color x:Key="SecondaryColor">#3498DB</Color>
        <Color x:Key="AccentColor">#2980B9</Color>

        <!-- Brush Resources -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="LightBackground" Color="White"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="HeaderForeground" Color="White"/>

        <!-- Gradient Header -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2980b9" Offset="0"/>
            <GradientStop Color="#6dd5fa" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Button Style -->
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource HeaderForeground}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16 8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#21618C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="AlternatingRowBackground" Value="#F0F0F0"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeaderWidth" Value="30"/>

            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderBrush" Value="#CCCCCC"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#D1E8FF"/>
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="RowHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRowHeader">
                        <Setter Property="Background" Value="#EAEAEA"/>
                        <Setter Property="BorderBrush" Value="#CCCCCC"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2980B9"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderBrush" Value="#CCCCCC"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Chart Container Style -->
        <Style x:Key="ChartContainer" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource LightBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header Section -->
                <Border Background="{StaticResource HeaderGradient}" 
                        CornerRadius="8" 
                        Padding="24"
                        Margin="0 0 0 24">
                    <StackPanel>
                        <TextBlock Text="HR ANALYTICS DASHBOARD"
                                 FontSize="28"
                                 FontWeight="Bold"
                                 Foreground="{StaticResource HeaderForeground}"/>
                        <TextBlock Text="Comprehensive Workforce Insights"
                                 FontSize="16"
                                 Foreground="#E0F2FE"
                                 Margin="0 4 0 0"/>
                    </StackPanel>
                </Border>

                <!-- Filters Section -->
                <Border Style="{StaticResource ChartContainer}" Margin="0 0 0 24">
                    <StackPanel>
                        <TextBlock Text="Data Filters"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0 0 0 12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Department Filter -->
                            <ComboBox Grid.Column="0"
                                    x:Name="cmbDepartment"
                                    Margin="0 0 12 0"
                                    SelectedIndex="0"
                                    FontSize="14"
                                    Padding="8">
                                <ComboBoxItem Content="All Departments"/>
                                <ComboBoxItem Content="HR"/>
                                <ComboBoxItem Content="IT"/>
                                <ComboBoxItem Content="Finance"/>
                            </ComboBox>

                            <!-- Date Range Filter -->
                            <DatePicker Grid.Column="1"
                                      Margin="0 0 12 0"
                                      FontSize="14"
                                      Padding="8"/>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="APPLY FILTERS"
                                      Style="{StaticResource ModernButton}"
                                      Width="140"/>
                                <Button Content="RESET"
                                      Style="{StaticResource ModernButton}"
                                      Background="#95A5A6"
                                      Margin="12 0 0 0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Data Visualization -->
                <Grid Margin="0 0 0 24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Employee Data Grid -->
                    <Border Grid.Column="0" 
                          Style="{StaticResource ChartContainer}" 
                          Margin="0 0 12 0">
                        <DataGrid x:Name="dgEmployees" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding EmployeeID}" Width="Auto"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                                <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="Auto"/>
                                <DataGridTextColumn Header="Salary" Binding="{Binding Salary}" Width="Auto"/>
                                <DataGridTextColumn Header="Join Date" Binding="{Binding JoinDate}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Salary Chart -->
                    <Border Grid.Column="1" 
                          Style="{StaticResource ChartContainer}" 
                          Margin="12 0 0 0">
                        <lvc:CartesianChart>
                            <lvc:CartesianChart.Series>
                                <lvc:ColumnSeries Title="Salary Distribution" 
                                                Values="{Binding SalaryValues}"
                                                Fill="{StaticResource AccentBrush}"/>
                            </lvc:CartesianChart.Series>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Department" 
                                        Labels="{Binding DepartmentLabels}"
                                        Foreground="{StaticResource PrimaryBrush}"/>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Salary (USD)" 
                                        LabelFormatter="{Binding YFormatter}"
                                        Foreground="{StaticResource PrimaryBrush}"/>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Border>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 24 0 0">
                    <Button Style="{StaticResource ModernButton}" 
                          Content="EXPORT REPORT"
                          Width="160"/>
                    <Button Style="{StaticResource ModernButton}" 
                          Content="PRINT PREVIEW"
                          Width="160"
                          Margin="12 0 0 0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>