<Window x:Class="Admas_HRM2.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Admas_HRM2"
        mc:Ignorable="d"
        Icon="pack://application:,,,/Icon/windowlogo.ico"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="550" Width="450">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo with Border Radius and Shadow -->
        <Border Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20" CornerRadius="50" Background="White" Padding="5" Width="100" Height="100">
            <Image Source="/Icon/windowlogo.ico" Height="90" Width="90" Stretch="Fill"/>
        </Border>
        <!--servaer (DESKTOP-OLM0M7H\SQLEXPRESS01)-->
        <!-- Login Type Label -->
        <TextBlock Grid.Row="1" Text="Login Type" FontSize="14" Foreground="#333" Margin="0,0,0,5" HorizontalAlignment="Left"/>
        <ComboBox x:Name="cbLoginType" Grid.Row="2" Height="40" VerticalAlignment="Center" Background="White" Foreground="#333" FontSize="14" Margin="0,0,0,10" BorderBrush="#bbb" BorderThickness="1" Padding="5" Width="300">
            <ComboBoxItem Content="Select Login Type" IsSelected="True" IsEnabled="False"/>
            <ComboBoxItem Content="HR Manager" />
            <ComboBoxItem Content="HR Admin"/>
            <ComboBoxItem Content="Department Head"/>
        </ComboBox>

        <!-- Username Label -->
        <TextBlock Grid.Row="3" Text="Username" FontSize="14" Foreground="#333" Margin="0,0,0,5" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtUsername" Grid.Row="4" Height="40" Margin="0,10,0,0" ToolTip="Enter your username" FontSize="14" Padding="5" Background="White" Foreground="#333" BorderBrush="#bbb" BorderThickness="1" Width="300"/>

        <!-- Password Label -->
        <TextBlock Grid.Row="5" Text="Password" FontSize="14" Foreground="#333" Margin="0,0,0,5" HorizontalAlignment="Left"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="6" Height="40" Margin="0,10,0,0" ToolTip="Enter your password" FontSize="14" Padding="5" Background="White" Foreground="#333" BorderBrush="#bbb" BorderThickness="1" Width="300"/>

        <!-- Login Button with Better Styling -->
        <Border Grid.Row="7" HorizontalAlignment="Center" CornerRadius="25" Background="#1287A7" Margin="0,20,0,0" Width="200" Height="45">
            <Button Content="Login" Background="Transparent" Foreground="White" FontWeight="Bold" FontSize="16" Cursor="Hand" BorderThickness="0" Click="LoginButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="#666" BlurRadius="10" Direction="270" ShadowDepth="5"/>
                </Button.Effect>
            </Button>
        </Border>
    </Grid>
</Window>
