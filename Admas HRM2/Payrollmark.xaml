<UserControl x:Class="Admas_HRM2.Payrollmark"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="#000000" BlurRadius="10" ShadowDepth="5" Opacity="0.3"/>
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2980b9" Offset="0"/>
            <GradientStop Color="#6dd5fa" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="SectionContainer" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="0 10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2980b9"/>
            <Setter Property="Margin" Value="0 0 0 15"/>
        </Style>

        <Style x:Key="DataField" TargetType="TextBlock">
            <Setter Property="Margin" Value="8 4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20" Effect="{StaticResource DropShadowEffect}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header Section -->
                    <Border Background="{StaticResource HeaderGradient}" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                        <TextBlock Text="Payroll Processing" 
                                 FontSize="28" 
                                 FontWeight="Bold" 
                                 HorizontalAlignment="Center" 
                                 Foreground="White"/>
                    </Border>

                    <!-- Employee Details -->
                    <Border Style="{StaticResource SectionContainer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Employee Details" Style="{StaticResource SectionHeader}" Grid.ColumnSpan="4"/>

                            <!-- First Name -->
                            <TextBlock Text="First Name:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                            <Border Grid.Row="1" Grid.Column="1" Background="#F8F9FA" CornerRadius="4" Margin="5">
                                <TextBlock x:Name="txtFirstName" Style="{StaticResource DataField}"/>
                            </Border>

                            <!-- Last Name -->
                            <TextBlock Text="Last Name:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
                            <Border Grid.Row="1" Grid.Column="3" Background="#F8F9FA" CornerRadius="4" Margin="5">
                                <TextBlock x:Name="txtLastName" Style="{StaticResource DataField}"/>
                            </Border>

                            <!-- Department -->
                            <TextBlock Text="Department:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                            <Border Grid.Row="2" Grid.Column="1" Background="#F8F9FA" CornerRadius="4" Margin="5">
                                <TextBlock x:Name="txtDepartment" Style="{StaticResource DataField}"/>
                            </Border>

                            <!-- Gross Salary -->
                            <TextBlock Text="Gross Salary:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"/>
                            <Border Grid.Row="2" Grid.Column="3" Background="#F8F9FA" CornerRadius="4" Margin="5">
                                <TextBlock x:Name="txtSalary" Style="{StaticResource DataField}"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Financial Breakdown -->
                    <Border Style="{StaticResource SectionContainer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Financial Breakdown" 
                 Style="{StaticResource SectionHeader}" 
                 Grid.ColumnSpan="4"/>

                            <!-- Allowances -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0 10 10 0">
                                <TextBlock Text="Allowances" 
                     FontWeight="SemiBold" 
                     Margin="0 0 0 10"
                     FontSize="16"/>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                                    <StackPanel x:Name="AllowancesContainer">
                                        <Border Background="#F8F9FA" 
                          CornerRadius="5" 
                          Padding="10 8" 
                          Margin="0 3">
                                            <Grid>
                                                <TextBlock Text="Housing Allowance" VerticalAlignment="Center"/>
                                                <TextBlock Text="$0" 
                                     HorizontalAlignment="Right"
                                     Foreground="#27ae60"
                                     FontWeight="Medium"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>

                            <!-- Vertical Separator -->
                            <Rectangle Grid.Row="1" Grid.Column="1" 
                 Width="1" 
                 Fill="#E0E0E0" 
                 Margin="15 0" 
                 VerticalAlignment="Stretch"/>

                            <!-- Deductions -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="10 10 0 0">
                                <TextBlock Text="Deductions" 
                     FontWeight="SemiBold" 
                     Margin="0 0 0 10"
                     FontSize="16"/>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                                    <StackPanel x:Name="DeductionsContainer">
                                        <Border Background="#F8F9FA" 
                          CornerRadius="5" 
                          Padding="10 8" 
                          Margin="0 3">
                                            <Grid>
                                                <TextBlock Text="Tax Deduction" VerticalAlignment="Center"/>
                                                <TextBlock Text="$0" 
                                     HorizontalAlignment="Right"
                                     Foreground="#e74c3c"
                                     FontWeight="Medium"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>

                            <!-- Net Salary Calculation -->
                            <Border Grid.Row="1" Grid.Column="3" 
              Background="#F8F9FA" 
              CornerRadius="8" 
              Padding="15" 
              Margin="15 10 0 0">
                                <StackPanel>
                                    <TextBlock Text="Net Salary Calculation" 
                         FontWeight="SemiBold" 
                         Margin="0 0 0 10"
                         FontSize="16"/>

                                    <!-- Calculation Items -->
                                    <Grid Margin="0 5">
                                        <TextBlock Text="Gross Salary:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtGrossSalary" 
                             Text="{Binding Text, ElementName=txtSalary}"
                             HorizontalAlignment="Right"
                             Foreground="#2c3e50"/>
                                    </Grid>

                                    <Grid Margin="0 5">
                                        <TextBlock Text="Total Allowances:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtTotalAllowances" 
                             Text="$0.00"
                             HorizontalAlignment="Right"
                             Foreground="#27ae60"/>
                                    </Grid>

                                    <Grid Margin="0 5">
                                        <TextBlock Text="Total Deductions:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtTotalDeductions" 
                             Text="$0.00"
                             HorizontalAlignment="Right"
                             Foreground="#e74c3c"/>
                                    </Grid>

                                    <Separator Margin="0 10" Background="#E0E0E0"/>

                                    <!-- Net Salary -->
                                    <Grid Margin="0 5">
                                        <TextBlock Text="Net Salary:" 
                             FontWeight="SemiBold"
                             VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtSalaryWithTax" 
                             Text="$1,200.00"
                             FontWeight="SemiBold"
                             HorizontalAlignment="Right"
                             Foreground="#2980b9"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Payment Details -->
                    <Border Style="{StaticResource SectionContainer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Payment Information" Style="{StaticResource SectionHeader}" Grid.ColumnSpan="2"/>

                            <TextBlock Text="Payment Method:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbPaymentMethod" Grid.Row="1" Grid.Column="1" Margin="10 5"
                                    SelectedIndex="0">
                                <ComboBoxItem Content="Bank Transfer"/>
                                <ComboBoxItem Content="Cheque"/>
                                <ComboBoxItem Content="Cash"/>
                                <ComboBoxItem Content="Credit Card"/>
                            </ComboBox>

                            <TextBlock Text="Attachment:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="10 5">
                                <Button x:Name="btnUploadFile" Content="Choose File" 
                                        Background="#2980b9" Foreground="White" Padding="10 5"
                                        Click="btnUploadFile_Click"/>
                                <TextBlock x:Name="txtFileName" Margin="10 0 0 0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                        <Button Content="Process Payment" Width="150" Height="40" FontSize="16"
                                Background="#27ae60" Foreground="White" Click="btnMarkAsPaid_Click"/>
                        <Button Content="Cancel" Width="150" Height="40" Margin="10 0 0 0"
                                Background="#e74c3c" Foreground="White" Click="btnCancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>