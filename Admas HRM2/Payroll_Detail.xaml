<UserControl x:Class="Admas_HRM2.Payroll_Detail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="#33000000" BlurRadius="15" ShadowDepth="5"/>
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2980b9" Offset="0"/>
            <GradientStop Color="#3498db" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2980b9"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="8"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1f6699"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#154a73"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#bdc3c7"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>



        <Style x:Key="DetailLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#7f8c8d"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DetailValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Border Background="White" CornerRadius="12" Effect="{StaticResource DropShadowEffect}" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header Section -->
                    <Border Background="{StaticResource HeaderGradient}" CornerRadius="8" Padding="20" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Employee Payroll Statement" 
                                     FontSize="24" 
                                     FontWeight="Bold" 
                                     Foreground="White"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="Monthly Compensation Details" 
                                     FontSize="16"
                                     Foreground="#ecf0f1"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Date Search -->
                    <Border Background="#f8f9fa" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                            <DatePicker x:Name="dpSearchDate" 
                                      Width="200" 
                                      FontSize="14"
                                      SelectedDateFormat="Short"/>
                            <Button Content="Search" 
                                  Style="{StaticResource ModernButton}"
                                  Margin="15,0" 
                                  Click="btnSearch_Click"
                                  Padding="20,8"/>
                        </StackPanel>
                    </Border>

                    <!-- Employee Information -->
                    <Border Background="#f8f9fa" CornerRadius="8" Padding="20" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="" FontSize="16" Foreground="#2980b9" FontWeight="Bold"/>
                                <TextBlock x:Name="txtFullName" Text="" FontSize="20" FontWeight="Bold" Margin="0,5"/>
                                <TextBlock x:Name="txtDepartment" Text="" FontSize="14" Foreground="#7f8c8d"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="Employment Status" FontSize="14" Foreground="#7f8c8d"/>
                                <TextBlock x:Name="txtType" Text="Full-Time Regular" FontWeight="SemiBold" Foreground="#27ae60"/>
                                <TextBlock Text="Years of Service" FontSize="14" Foreground="#7f8c8d" Margin="0,5"/>
                                <TextBlock x:Name="txtServiceYears" Text="4.5 Years" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Salary Breakdown -->
                    <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Earnings -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Earnings" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock x:Name="txtSalary" Text="Base Salary: " FontSize="14" Foreground="#2C3E50"/>
                                <TextBlock x:Name="txtAllowances" Text="Allowances: $0.00" FontSize="14" Foreground="#2C3E50"/>
                            </StackPanel>

                            <!-- Deductions -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Deductions" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock x:Name="txtDeductions" Text="Taxes: $0.00" FontSize="14" Foreground="#C0392B"/>
                                <TextBlock x:Name="txtOtherDeductions" Text="Other Deductions: $0.00" FontSize="14" Foreground="#C0392B"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Payment Summary -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Net Pay -->
                        <Border Background="#2980b9" CornerRadius="8" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Net Pay" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                <TextBlock x:Name="txtNetSalary" Text="" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,10"/>
                                <TextBlock Text="Paid via Direct Deposit" Foreground="#bdc3c7" FontSize="12"/>
                                <!-- Added Payment Date -->
                                <TextBlock x:Name="txtPaymentDate" 
                 Text="Payment Date: " 
                 Foreground="#ecf0f1"
                 FontSize="14"
                 Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Overall Payment -->
                        <Border Grid.Column="1" Background="#27ae60" CornerRadius="8" Padding="20" Margin="15,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Overall Payment" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                <TextBlock x:Name="txtOverallPayment" Text="" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,10"/>
                                <TextBlock Text="Current Fiscal Year" Foreground="#d5f5e3" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- File Attachment -->
                    <Border Background="#f8f9fa" CornerRadius="8" Padding="20" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Path Data="M3 5v14l7-7 7 7V5H3zm16-2H1v16l7-7 7 7V3z"
                                      Fill="#2980b9" 
                                      Stretch="Uniform"
                                      Width="20"
                                      Margin="0,0,10,0"/>
                                <TextBlock x:Name="txtFileType" 
                                         Text="No file selected" 
                                         VerticalAlignment="Center"
                                         FontSize="14"
                                         Foreground="#7f8c8d"/>
                                <Button x:Name="btnOpenFile" 
                                        Grid.Column="1"
                                        Margin="10 0 0 0"
                                        Content="Open Payslip" 
                                        Style="{StaticResource ModernButton}"
                                        Click="btnOpenFile_Click"
                                        Padding="20,8"/>
                            </StackPanel>

                        </Grid>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
                        <Button Content="Print Statement" Width="160" Style="{StaticResource ModernButton}"/>
                        <Button Content="Close" Width="120" Margin="15,0,0,0" Style="{StaticResource ModernButton}" Click="btnClose_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>