<UserControl x:Class="Admas_HRM2.Employee_Detail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="#40000000" BlurRadius="8" ShadowDepth="3" Opacity="0.2"/>
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2C3E50" Offset="0"/>
            <GradientStop Color="#3498DB" Offset="1"/>
        </LinearGradientBrush>

        <Style TargetType="TextBlock" x:Key="SectionHeader">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0 0 0 8"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="DetailLabel">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="Margin" Value="0 0 0 4"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="DetailValue">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0 0 0 12"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12 6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Border Background="White" 
                CornerRadius="8" 
                Effect="{StaticResource DropShadowEffect}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="Auto"/>
                        <!-- Profile -->
                        <RowDefinition Height="Auto"/>
                        <!-- Main Details -->
                        <RowDefinition Height="Auto"/>
                        <!-- Description -->
                        <RowDefinition Height="Auto"/>
                        <!-- Contact -->
                        <RowDefinition Height="Auto"/>
                        <!-- Actions -->
                    </Grid.RowDefinitions>

                    <!-- Header Section -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource HeaderGradient}" 
                            CornerRadius="4" 
                            Padding="16"
                            Margin="0 0 0 24">
                        <TextBlock Text="EMPLOYEE PROFILE" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Profile Section -->
                    <Grid Grid.Row="1" Margin="0 0 0 32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="128" 
                                Height="128" 
                                CornerRadius="64"
                                Background="#ECF0F1"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"
                                VerticalAlignment="Center">
                            <Image x:Name="imgProfile" Stretch="UniformToFill"/>
                        </Border>

                        <StackPanel Grid.Column="1" 
                                    Margin="24 0 0 0"
                                    VerticalAlignment="Center">
                            <TextBlock x:Name="txtFirstName" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="#2C3E50"/>
                            <TextBlock x:Name="txtLastName" 
                                       FontSize="20" 
                                       Foreground="#7F8C8D"
                                       Margin="0 4 0 0"/>
                            <TextBlock x:Name="txtTitle" 
                                       FontSize="16" 
                                       Foreground="#3498DB"
                                       Margin="0 8 0 0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Main Details -->
                    <Grid Grid.Row="2" Margin="0 0 0 24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column - Basic Info -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Basic Information" Style="{StaticResource SectionHeader}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Employee ID:" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtEmployeeID" Style="{StaticResource DetailValue}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Department:" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtDepartment" Style="{StaticResource DetailValue}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Position:" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtRole" Style="{StaticResource DetailValue}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Gender:" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtGender" Style="{StaticResource DetailValue}"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Hire Type:" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtHireType" Style="{StaticResource DetailValue}"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Date of Birth:" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" x:Name="txtDOB" Style="{StaticResource DetailValue}"/>
                            </Grid>
                        </StackPanel>

                        <!-- Right Column - Employment Details -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Employment Details" Style="{StaticResource SectionHeader}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Join Date:" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtJoiningDate" Style="{StaticResource DetailValue}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtStatus" Style="{StaticResource DetailValue}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Salary:" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtSalary" Style="{StaticResource DetailValue}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Education:" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtEducation" Style="{StaticResource DetailValue}"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Username:" Style="{StaticResource DetailLabel}"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtUsername" Style="{StaticResource DetailValue}"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Document" Style="{StaticResource DetailLabel}"/>
                                <Button Grid.Row="5" Grid.Column="1" x:Name="btnFileAttachment" Content="Open File" Width="140" HorizontalAlignment="Left" Click="btnFileAttachment_Click"/>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <!-- Description Section -->
                    <Border Grid.Row="3" 
                            Background="#F8F9FA" 
                            CornerRadius="4"
                            Padding="16"
                            Margin="0 0 0 24">
                        <StackPanel>
                            <TextBlock Text="Description" Style="{StaticResource SectionHeader}"/>
                            <TextBlock x:Name="txtDescription" 
                                       Style="{StaticResource DetailValue}"
                                       TextWrapping="Wrap"
                                       Margin="0 8 0 0"/>
                        </StackPanel>
                    </Border>

                    <!-- Contact Information -->
                    <Border Grid.Row="4" 
                            Background="#F8F9FA" 
                            CornerRadius="4"
                            Padding="16"
                            Margin="0 0 0 24">
                        <StackPanel>
                            <TextBlock Text="Contact Information" Style="{StaticResource SectionHeader}"/>
                            <Grid Margin="0 8 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Email Address" Style="{StaticResource DetailLabel}"/>
                                    <TextBlock x:Name="txtEmail" Style="{StaticResource DetailValue}"/>

                                    <TextBlock Text="Phone Number" Style="{StaticResource DetailLabel}" Margin="0 16 0 0"/>
                                    <TextBlock x:Name="txtPhoneNumber" Style="{StaticResource DetailValue}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Address" Style="{StaticResource DetailLabel}"/>
                                    <TextBlock x:Name="txtAddress" Style="{StaticResource DetailValue}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="5" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0 16 0 0">
                        <Button Content="Close" 
                                Width="100" 
                                Click="btnClose_Click"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>