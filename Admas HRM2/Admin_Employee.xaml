<UserControl x:Class="Admas_HRM2.Admin_Employee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="850"
             Background="White">

    <Grid Background="White" Margin="20">
        <!-- Grid Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="50"/>
            <RowDefinition Height="Auto" MinHeight="50"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Title -->
        <TextBlock Text="Employee Management" FontSize="26" FontWeight="Bold" Foreground="#2C3E50"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"
                   TextWrapping="Wrap" Width="304"/>

        <!-- Search & Add Employee Panel -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,10,10">
            <!-- Search TextBox -->
            <TextBox x:Name="txtSearch" Width="250" Height="35" FontSize="14" Padding="7"
                     VerticalAlignment="Center" Margin="0,0,5,0"/>

            <!-- Search Button -->
            <Button Content="🔍 Search" Padding="10,7" Background="#2980B9" Foreground="White"
                    FontSize="14" Cursor="Hand" BorderThickness="0" Width="100" Height="35" Margin="0,0,15,0"
                    Click="SearchButton_Click"/>

            <!-- Add Employee Button -->
            <Button Content="➕ Add Employee" Padding="10,7" Background="#27AE60" Foreground="White"
                    FontSize="14" Cursor="Hand" BorderThickness="0" Width="160" Height="40"
                    Click="AddEmployeeButton_Click"/>
        </StackPanel>

        <!-- Employee DataGrid -->
        <DataGrid x:Name="dgEmployees" AutoGenerateColumns="False" Grid.Row="2"
                  SelectionMode="Single" CanUserAddRows="False" HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch" Margin="0,10,0,0"
                  SelectionChanged="dgEmployees_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeID}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Names" Binding="{Binding Name}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" IsReadOnly="True"/>

                <!-- Edit Button -->
                <DataGridTemplateColumn Header="Edit" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="✏️ Edit" Background="LightBlue" Foreground="Black"
                                    Padding="5,3" Width="60" Height="30" Cursor="Hand"
                                    BorderThickness="0" Tag="{Binding}" Click="EditButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- View Details Button -->
                <DataGridTemplateColumn Header="Details" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="🔍 View" Background="LightGreen" Foreground="Black"
                                    Padding="5,3" Width="70" Height="30" Cursor="Hand"
                                    BorderThickness="0" Tag="{Binding}" Click="ViewDetailsButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
