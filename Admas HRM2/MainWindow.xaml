<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        x:Class="Admas_HRM2.MainWindow" 
        WindowStartupLocation="CenterScreen" 
        Width="1300" 
        Title="HR Manager" 
        Height="800" 
        Background="#F4F4F4"
        Icon="pack://application:,,,/Icon/windowlogo.ico">

    <Window.Resources>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="#40000000"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Hover Effect -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
                <!-- Click Effect -->
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2C3E50"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <!-- Sidebar Navigation -->
            <Border DockPanel.Dock="Left" Width="320" Background="#2C3E50">
                <StackPanel>
                    <!-- Sidebar Header -->
                    <StackPanel Margin="20" VerticalAlignment="Top">
                        <TextBlock Text="HR Manager" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Welcome, HR Manager" FontSize="14" Foreground="#BDC3C7" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Separator Background="#34495E" Margin="10,0"/>

                    <!-- Navigation Buttons -->
                    <StackPanel Margin="10" x:Name="SidebarMenu">
                        <Button x:Name="btnDashboard" Content="Dashboard" Margin="0,5" Click="NavigationButton_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Icon/icons8-dashboard-50.png" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button x:Name="btnEmployees" Content="Manage Employees" Margin="0,5" Click="NavigationButton_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Icon/icons8-employees-50.png" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                        <Button x:Name="btnDepartments" Content="Manage Departments" Margin="0,5" Click="NavigationButton_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Icon/icons8-department-48.png" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                        <Button x:Name="btnPayroll" Content="Payroll" Margin="0,5" Click="NavigationButton_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Icon/icons8-payroll-50.png" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                        <Button x:Name="btnAttendance" Content="Attendance" Margin="0,5" Click="NavigationButton_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Icon/icons8-attendance-50.png" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                        <Button x:Name="btnReports" Content="Reports" Margin="0,5" Click="NavigationButton_Click">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Icon/icons8-report-50.png" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>

                    <Separator Background="#34495E" Margin="10,0"/>

                    <!-- Logout Button -->
                    <Button x:Name="btnLogout" Content="Logout" Margin="10" Click="Button_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Icon/icons8-logout-45.png" Width="20" Height="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </Border>

             <!-- Main Content Area -->
            <Grid Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Fixed Height for Navigation -->
                    <RowDefinition Height="*"/>
                    <!-- Scrollable Content -->
                </Grid.RowDefinitions>

                <!-- Top Navigation Bar (Fixed) -->
                <Border Background="#2C3E50" Height="60" Grid.Row="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Button Content="Settings" Foreground="White" Background="Transparent" FontSize="14" Margin="0,0,20,0">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Icon/icons8-setting-50.png" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                        <Button Content="Profile" Foreground="White" Background="Transparent" FontSize="14" Margin="0,0,10,0">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Icon/icons8-male-user-50.png" Width="20" Height="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Scrollable Content -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                    <ContentControl x:Name="MainContentControl" Margin="10"/>
                </ScrollViewer>
            </Grid>

        </DockPanel>
    </Grid>
</Window>